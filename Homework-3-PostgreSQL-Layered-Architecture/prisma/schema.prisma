generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  login     String   @unique @db.VarChar(50)
  password  String   @db.VarChar(50)
  age       Int      @db.SmallInt
  isDeleted Boolean  @default(false) @map("is_deleted")

  @@map("users")
}
